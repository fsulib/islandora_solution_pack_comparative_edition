/**
 * Implements template_preprocess_HOOK().
 */
function template_preprocess_islandora_genetic_edition_page(&$variables) {
  drupal_add_library( 'system' , 'ui.tabs' );
  drupal_add_css(drupal_get_path('module', 'islandora_genetic_edition') . '/css/islandora_genetic_edition.css');
  drupal_add_js(drupal_get_path('module', 'islandora_genetic_edition') . '/js/islandora_genetic_edition.js');
  module_load_include('inc', 'islandora', 'includes/solution_packs');
  
  $islandora_object = $variables['islandora_object'];
  
  if(isset($islandora_object['JP2'])) {
    $params = array();
    $jp2_url = url("islandora/object/{$islandora_object->id}/datastream/JP2/view",
      array(
      'absolute' => TRUE,
      ));
    $params['jp2_url'] = $jp2_url; 
    $viewer = islandora_get_viewer($params, 'islandora_genetic_edition_page_viewers', $islandora_object);
  }
  
  if ($viewer) {
    $variables['page_image'] = $viewer;
  } else {
    $variables['page_image'] = "<img src='/islandora/object/{$islandora_object->id}/datastream/OBJ/view'>";
  }
}

